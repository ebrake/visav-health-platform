{
  "name": "dillinger",
  "version": "1.0.0",
  "scripts": {
    "install": "npm install --ignore-scripts",
    "backend": "heroku local -f Procfile.dev",
    "client": "cd client && npm run start",
    "build-client": "cd client && npm install",
    "start-prod": "node ./server-dist/server.init-prod",
    "start-dev": "node ./server/server.init-dev",
    "clean-prod-package": "rm -rf server-dist || true",
    "clean-client-package": "rm -rf client-dist || true",
    "package-client": "npm run clean-client-package && cp -rf client client-dist && ./node_modules/.bin/babel --optional runtime --ignore ./client/node_modules -d client-dist ./client",
    "package-prod": "npm run clean-prod-package && cp -rf server server-dist && ./node_modules/.bin/babel --optional runtime -d server-dist ./server",
    "postinstall": "npm run build-client && npm run package-prod && npm run package-client",
    "pretest": "eslint .",
    "posttest": "nsp check"
  },
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-react": "^6.11.1",
    "compression": "^1.0.3",
    "consolidate": "^0.14.1",
    "cors": "^2.5.2",
    "es6-module-loader": "^0.17.11",
    "fs": "0.0.2",
    "handlebars": "^4.0.5",
    "helmet": "^1.3.0",
    "lodash": "^4.14.1",
    "loopback": "^3.0.0-alpha.1",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^2.4.0",
    "loopback-component-push": "^1.5.4",
    "loopback-connector-postgresql": "^2.6.3",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-google": "^0.3.0",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-router": "^2.6.0",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^1.0.1",
    "uuid": "^2.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "eslint": "^2.5.3",
    "nsp": "^2.1.0"
  },
  "engines": {
    "node": "6.3.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "dillinger"
}

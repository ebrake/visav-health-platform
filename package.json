{
  "name": "VISAV-backend",
  "version": "1.0.0",
  "scripts": {
    "backend": "heroku local -f Procfile.dev",
    "client": "cd client && npm run start",
    "build-prod-client": "cd client && npm install",
    "build-client": "cd client && npm install --ignore-scripts && npm run build-dev",
    "start-prod": "node ./server/server.init-prod",
    "start-dev": "node ./server/server.init-dev",
    "package-client": "./node_modules/.bin/babel --copy-files --optional runtime --ignore ./client/node_modules -d client-dist ./client && rm -f -r ./client && mv client-dist client",
    "package-prod": "./node_modules/.bin/babel --copy-files --optional runtime -d server-dist ./server  && ./node_modules/.bin/babel --copy-files --optional runtime -d common-dist ./common && rm -f -r ./server && mv server-dist server && rm -f -r ./common && mv common-dist common",
    "pretest": "eslint .",
    "posttest": "nsp check",
    "test-client": "./node_modules/.bin/karma start ./tests/karma.conf.client.js",
    "test-client-debug": "./node_modules/.bin/karma start ./tests/karma.conf.client.js --debug",
    "test-server": "./node_modules/.bin/mocha ./server/__tests__/**/*.js",
    "doc": "./node_modules/.bin/jsdoc --package ./package.json -c ./documentation/config/server.config.json && ./node_modules/.bin/jsdoc --package ./client/package.json -c ./documentation/config/client.config.json",
    "heroku-postbuild": "npm run build-prod-client && npm run package-prod && npm run package-client"
  },
  "dependencies": {
    "aws-mqtt-client": "0.0.5",
    "babel-cli": "^6.14.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-airbnb": "^2.1.0",
    "bluebird": "^3.4.6",
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "express-sslify": "^1.1.0",
    "fs": "0.0.2",
    "helmet": "^1.3.0",
    "lodash": "^4.14.1",
    "loopback": "^3.0.0",
    "loopback-boot": "^2.22.0",
    "loopback-component-explorer": "^2.6.0",
    "loopback-component-model-diagram": "^0.2.0",
    "loopback-component-push": "^1.6.0",
    "loopback-connector-postgresql": "^2.6.3",
    "newrelic": "^1.30.3",
    "node-fetch": "^1.6.0",
    "opentok": "^2.3.2",
    "oy-vey": "^0.7.0",
    "plivo": "^0.3.3",
    "react": "^15.3.2",
    "react-dropdown": "^1.1.0",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^1.0.1",
    "uuid": "^2.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "docdash": "^0.4.0",
    "eslint": "^3.5.0",
    "eslint-config-loopback": "^4.0.0",
    "expect": "^1.20.2",
    "jsdoc": "^3.4.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-cli": "1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.0.2",
    "nsp": "^2.6.1",
    "react-addons-test-utils": "^15.3.2"
  },
  "engines": {
    "node": "6.6.0",
    "npm": "3.10.3"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "Copyright 2016 Kris & Brake Consulting Ltd.",
  "description": "dillinger"
}

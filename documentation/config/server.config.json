{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "include" :["server","common"],
        "includePattern": ".+\\.js(jsx)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown",
        "plugins/summarize"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "includeDate": false
        }
    },
    "opts": {
        "encoding": "utf8",
        "recurse" : true, 
        "destination": "./documentation/",
        "template": "node_modules/docdash"
    }
}

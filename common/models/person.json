{
  "name": "Person",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "firstName": {
      "type": "String",
      "default": "Kristopher"
    },
    "lastName": {
      "type": "String",
      "default": "Goudie"
    }
  },
  "validations": [],
  "relations": {
    "doctors": {
      "type": "hasMany",
      "model": "Person",
      "foreignKey": "patient",
      "through": "DoctorPatient"
    },
    "patients": {
      "type": "hasMany",
      "model": "Person",
      "foreignKey": "doctor",
      "through": "DoctorPatient"
    },
    "caregivers": {
      "type": "hasMany",
      "model": "Person",
      "foreignKey": "patient",
      "keyThrough": "caregiver",
      "through": "CaregiverPatient"
    },
    "caregivees": {
      "type": "hasMany",
      "model": "Person",
      "foreignKey": "caregiver",
      "keyThrough": "patient",
      "through": "CaregiverPatient"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "remoteLogin"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "remoteCreate"
    }
  ],
  "methods": {}
}

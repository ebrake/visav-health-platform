{
  "name": "Person",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      "roles",
      "organization"
    ]
  },
  "properties": {
    "firstName": {
      "type": "String",
      "default": "Kristopher"
    },
    "lastName": {
      "type": "String",
      "default": "Goudie"
    },
    "phone": {
      "type": "String"
    }
  },
  "validations": [],
  "relations": {
    "doctors": {
      "type": "hasMany",
      "model": "Person",
      "foreignKey": "patientId",
      "keyThrough": "doctorId",
      "through": "DoctorPatient"
    },
    "patients": {
      "type": "hasMany",
      "model": "Person",
      "foreignKey": "doctorId",
      "keyThrough": "patientId",
      "through": "DoctorPatient"
    },
    "caregivers": {
      "type": "hasMany",
      "model": "Person",
      "foreignKey": "caregiveeId",
      "keyThrough": "caregiverId",
      "through": "CaregiverPatient"
    },
    "caregivees": {
      "type": "hasMany",
      "model": "Person",
      "foreignKey": "caregiverId",
      "keyThrough": "caregiveeId",
      "through": "CaregiverPatient"
    },
    "organization": {
      "type": "belongsTo",
      "model": "Organization",
      "foreignKey": "organization"
    },
    "roles": {
      "type": "hasMany",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping",
      "keyThrough": "roleId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "signin"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "signup"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "invite"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "updateUser"
    }
  ],
  "methods": {}
}

{
  "name": "Message",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "dismissed": {
      "type": "boolean",
      "default": false
    },
    "actionTaken": {
      "type": "boolean",
      "default": false
    },
    "date": {
      "type": "date",
      "required": true,
      "default": "$now"
    },
    "delivered": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "sender": {
      "type": "belongsTo",
      "model": "Person",
      "foreignKey": "sender"
    },
    "recipient": {
      "type": "belongsTo",
      "model": "Person",
      "foreignKey": "recipient"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "send"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "sendEmail"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "sendText"
    }
  ],
  "methods": {}
}
